<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
    <title>{% block title %}Billet simple pour l'Alaska de Jean FORTEROCHE{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
              integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
              crossorigin="anonymous">
        <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
        <link href="{{ asset('css/base.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>

<body>

    <div class="container">
        <header id="header">
            <div class="row">
                {% block navigation %}
                    <nav class="col-lg-12">
                        <ul class="navigation">
                            {% if app.user %}
                                <img src="{{ asset('images/admin.png') }}" class = "admin" alt="admin"/>
                                <li><a href="{{ path('logout') }} ">Se déconnecter</a></li>
                                <li><a href="{{ path('blogjf_admin') }} ">Accueil Admin</a></li>
                                <li><a href="{{ path('blogjf_accueil') }} ">Blog</a></li>
                            {% else %}
                                <li><a href="{{ path('blogjf_admin') }} ">Administration</a></li>
                                <li><a href="{{ path('blogjf_accueil') }} ">Accueil</a></li>
                            {% endif %}

                            <li><a href="{{ path('blogjf_apropos') }}">A propos</a></li>
                        </ul>
                    </nav>
                {% endblock %}
            </div>

            <hgroup class="row">
                <div class="col-lg-12">
                    <h2>{% block blog_title %}Billet simple pour l'Alaska{% endblock %}</h2>
                    <h3>{% block blog_tagline %}<a href="{{ path('blogjf_apropos') }}">Roman de Jean FORTEROCHE</a>{% endblock %}</h3>
                </div>
            </hgroup>
        </header>

        <div class="row">
        <section class="main-col col-lg-12">
            {% block body %}{% endblock %}
        </section>
        </div>

        <div id="footer" class="row text-center">
            {% block footer %}
                Copyright © 2017 - Adeline BARRÉ - Tous droits réservés<br/>
                <a href="/mentions-legales" title="Mentions légales">Mentions légales</a>
            {% endblock %}
        </div>
    </div>

{% block javascripts %}{% endblock %}
</body>

</html>
