{# src/BlogJF/BlogBundle/Resouces/views/Admin/show.html.twig #}
{% extends 'BlogJFBlogBundle::layout.html.twig' %}

{% block title %}{{ billet.titre }} {% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    {#<fieldset>#}

    <label>Titre de l'épisode</label>{{ form_widget(form.titre) }}
    <br/><br/><br/>

    {{ form_widget(form.roman) }}

    {{ form_widget(form._token) }}

    <a href="{{ path('blogjf_admin') }}"><input type="button" class="btn btn-danger" value="Annuler" /></a>
    <a href="{{ path('blogjf_admindel', {'id': billet.id}) }}"><input type="button" class="btn btn-danger" value="Supprimer l'épisode" /></a>
    <input type="submit" class="btn btn-default" value="Valider" />
    <hr />
    {{ form_end(form) }}

{% endblock %}